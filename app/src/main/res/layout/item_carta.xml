<?xml version="1.0" encoding="utf-8"?>
<FrameLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:id="@+id/cardContainer"
    android:layout_width="match_parent"
    android:layout_height="250dp"
    android:foreground="?attr/selectableItemBackground"
    android:clipToPadding="false"
    android:clipChildren="false">

    <!-- Frente de la carta -->
    <LinearLayout
        android:id="@+id/layoutFront"
        android:orientation="vertical"
        android:gravity="center"
        android:padding="8dp"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:background="@drawable/fondo_carta_simple">

        <ImageView
            android:id="@+id/imgFrente"
            android:layout_width="120dp"
            android:layout_height="150dp"
            android:scaleType="centerInside"
            android:background="@drawable/fondo_carta_simple"
            android:padding="6dp"/>

        <TextView
            android:id="@+id/tvNombreFrente"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="8dp"
            android:textSize="20sp"
            android:textStyle="bold"
            android:gravity="center"
            android:textColor="#000000" />
    </LinearLayout>


    <!-- Reverso de la carta -->
    <LinearLayout
        android:id="@+id/layoutBack"
        android:orientation="vertical"
        android:gravity="center"
        android:visibility="gone"
        android:padding="8dp"

        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:background="@drawable/fondo_carta_atras">

        <TextView
            android:id="@+id/tvNombre"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textColor="#FFFFFF"
            android:textSize="18sp" />



        <TextView
            android:id="@+id/tvVida"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textColor="#FFFFFF" />

        <TextView
            android:id="@+id/tvAtaque"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textColor="#FFFFFF" />

        <TextView
            android:id="@+id/tvTipo"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textColor="#FFFFFF" />

        <CheckBox
            android:id="@+id/checkSeleccionar"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Seleccionar"
            android:textColor="#FFFFFF"
            android:layout_marginTop="12dp" />
    </LinearLayout>

</FrameLayout>
