<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#FFFFFF"
    tools:context=".ui.home.HomeFragment">

    <ImageButton
        android:id="@+id/iBTusCartas"
        android:layout_width="wrap_content"
        android:layout_height="160dp"
        android:layout_marginTop="184dp"
        android:backgroundTint="#000000"
        android:scaleType="fitCenter"
        android:src="@drawable/tus_cartas"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.0"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <ImageButton
        android:id="@+id/iBCrearCartas"
        android:layout_width="161dp"
        android:layout_height="125dp"
        android:layout_marginTop="92dp"
        android:backgroundTint="#101010"
        android:scaleType="fitCenter"
        android:src="@drawable/crear_carta"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/iBTusCartas" />

    <ImageButton
        android:id="@+id/iBEnfrentamiento"
        android:layout_width="161dp"
        android:layout_height="125dp"
        android:layout_marginTop="92dp"
        android:backgroundTint="#0B0B0B"
        android:scaleType="fitCenter"
        android:src="@drawable/enfrentamiento"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="1.0"
        app:layout_constraintStart_toEndOf="@+id/iBCrearCartas"
        app:layout_constraintTop_toBottomOf="@+id/iBTusCartas" />
</androidx.constraintlayout.widget.ConstraintLayout>